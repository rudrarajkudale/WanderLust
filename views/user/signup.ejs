<% layout("layout/boilerplate") %>
<div class="row min-vh-75">
    <div class="col-6 offset-3">
        <br><h3 class="h3-style">Sign up to wonderlust</h3><br>
        <form action="/user/signup" method="post" novalidate class="needs-validation">
            <div class="mb-3"> 
                <label for="username" class="form-lable">Username</label>
                <input name="username" type="text" class="form-control" required id="username"/>
                <div class="valid-feedback">Tile looks good!</div>
            </div>
            <div class="mb-3"> 
                <label for="password" class="form-lable">Password</label>
                <input name="password" type="password"  class="form-control" required id="password"/>
            </div>
            <div class="mb-3"> 
                <label for="email" class="form-lable">Email</label>
                <input name="email" type="text" class="form-control" required id="email"/>
            </div>
            <button class="btn btn-primary" type="submit">Sign Up</button>
        </form> 
    </div>
</div>

