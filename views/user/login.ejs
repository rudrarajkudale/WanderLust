<% layout("layout/boilerplate") %>
<div class="row">
    <div class="col-6 offset-3">
        <br><h3>Login up to wonderlust</h3><br>
        <form action="/user/login" method="post" novalidate class="needs-validation">
            <div class="mb-3"> 
                <label for="username" class="form-lable">Username</label>
                <input name="username" type="text" class="form-control" required id="username"/>
            </div>
            <div class="mb-3"> 
                <label for="password" class="form-lable">Password</label>
                <input name="password" type="password"  class="form-control" required id="password"/>
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </form>
    </div>
</div>

